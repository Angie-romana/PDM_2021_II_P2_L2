<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomorado"
    tools:context=".NotasActivity2">

    <Spinner
        android:id="@+id/spnNumeroCuenta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:background="#E1ACF8"
        android:dropDownSelector="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toTopOf="@+id/spnClasesMatriculadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvNotas" />

    <Spinner
        android:id="@+id/spnClasesMatriculadas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="71dp"

        android:background="#E1ACF8"
        android:dropDownSelector="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/txtNota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnNumeroCuenta" />

    <EditText
        android:id="@+id/txtNota1"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Parcial 2"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtNota2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota" />

    <EditText
        android:id="@+id/txtNota"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Parcial 1"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorLink="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/txtNota1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnClasesMatriculadas" />

    <EditText
        android:id="@+id/txtNota2"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:hint="Parcial 3"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota1" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="96dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEnviarCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota2" />

    <Button
        android:id="@+id/btnEnviarCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Enviar Correo"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGuardar" />

    <TextView
        android:id="@+id/txvNotas"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="12dp"
        android:text="Notas"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/spnNumeroCuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>