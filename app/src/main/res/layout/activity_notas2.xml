<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".NotasActivity2">

    <ImageView
        android:id="@+id/txvIconoMatricula2"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:contentDescription="@string/icononumerocuenta"
        app:srcCompat="@drawable/numerocuenta"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="108dp" />

    <ImageView
        android:id="@+id/txvIconoMatricula3"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:contentDescription="@string/icononumerocuenta"
        app:srcCompat="@drawable/libros"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="194dp" />

    <Spinner
        android:id="@+id/spnNumeroCuenta"
        android:layout_width="292dp"
        android:layout_height="55dp"
        android:dropDownSelector="@android:drawable/arrow_down_float"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="111dp" />

    <Spinner
        android:id="@+id/spnClasesMatriculadas"
        android:layout_width="289dp"
        android:layout_height="60dp"

        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="194dp" />

    <EditText
        android:id="@+id/txtNota1"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Parcial 2"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="401dp" />

    <EditText
        android:id="@+id/txtNota"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Parcial 1"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorLink="@color/purple_700"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="323dp" />

    <EditText
        android:id="@+id/txtNota2"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Parcial 3"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="587dp" />

    <Button
        android:id="@+id/btnEnviarCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Correo"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="587dp" />

    <TextView
        android:id="@+id/txvNotas"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:text="Notas"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="59dp" />
</androidx.constraintlayout.widget.ConstraintLayout>